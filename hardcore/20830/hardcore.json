from os.path import sep
from json import load as load_json

env = getEnvironment()
path = env['systemScriptsDirectory'] if env["platform"] not in ['android'] else '/data/data/net.froemling.bombsquad/files/bombsquad_files/data/scripts'
path += sep + 'hardcoreModpack.data'
del env

def get_version(numeric=True):
    if not os.path.exists(path): return None
    try: data = load_json(open(path, 'r'))
    except: data = {}
    return int(data.get("version", 0)) if numeric else data.get("version_str", "0")
    
version = get_version(True)
